{
    "manifest_version": 2,

    "name": "ReplyTube",
    "version": "1.0",
    "description": "YouTube Comments Extension for Disabled Comments.",

    "content_scripts": [
        {
          "matches": ["https://www.youtube.com/*"],
          "css": ["popup.css"]
        }
      ],

    "browser_action": {
        "default_popup": "popup.html"
    },

    "permissions":[
        "activeTab"
    ]
}

