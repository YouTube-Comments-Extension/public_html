{
  "manifest_version": 2,

  "name": "ReplyTube",
  "version": "1.0",
  "description": "YouTube Comments Extension for Disabled Comments.",

  "content_scripts": [
      {
        "js": ["content.js"],
        "matches": ["<all_urls>"]
      }
    ],

  "browser_action": {
      "default_popup": "popup.html"
  },

  "permissions":[
      "activeTab",
      "cookies",
      "https://replytu.be/"
    ]
}

